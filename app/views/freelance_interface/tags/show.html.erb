<h1><%= @tag.title %></h1>

<div class="tag_cloud fi_tag_tag_cloud" >
	<h2>Выбор категории</h2>
	<% @tags.each do |tag| %>
		<a href='<%= freelance_interface_tag_path(tag.id) %>' style="font-size:<%= 15 + Random.rand(5) %>px;"> <%= tag.title %>  </a>
	<% end %>
</div>

