<h1>Профиль фрилансера</h1>

<div id="freelancer_profile_info"> 
	<div class="fi_profile_actions">
		<button>Премиум-главная</button>
		<button>Премиум-категория</button>
		<button>ДОбавить категории</button>
	</div>
      <% if @freelancer %>
      	<% if @freelancer.picture_url? %>
      		<%= image_tag(@freelancer.picture_url) %>
      	<% else %>
      		<img src="/assets/no_freelancer.jpg" alt="">
      	<% end %>
      	
      	<p><%= @freelancer.name %> <%= @freelancer.surname %> id<%= @freelancer.id %></p>
		<p>тел. <%= @freelancer.phone_number %></p>
		<p><%= @freelancer.published %></p>
      <% end %>

      <% if @tags %>
      <h3>Оказываемые услуги:</h3>
      	<div style="_height: px; width: 75%;background-color: #FFF;border: 1px solid #FFF; text-align: left;">
			<% @tags.each do |tag| %>
				<a href="#" style="font-size:<%= 15 + Random.rand(5) %>px;text-decoration:none; margin-left: 10px; border-bottom: 1px dotted; color: #000;"> <%= tag.title %>  </a>
			<% end %>
		</div>
      <% end %>
      <div class="clear"></div>
</div>


<br>

<div id="comments">
	<p>Отзывы</p>
	

	<% if @comments == [] %>
		<p>Нет отзывов</p>
	<% else %>
		<% @comments.each do |c| %>
			<p><%= c.body %></p>
		<% end %>
	<% end %>

	<% unless current_user %>
		<p>
			<a href="/login">Войдите</a> в систему, чтобы оставить отзыв.
		</p>
	<% else %>
		<p>

			<%= form_for @comment, remote: true, method: :post do |f| %>
				<%= f.hidden_field :freelancer_id, value: @freelancer.id %>
				<%= f.text_field :body, placeholder: "Введите Ваш отзыв" %>
				<%= f.submit "Подтвердить" %>
			<% end %>
		</p>
	<% end %>
</div>

