<div class="box_center box_blue">
        <div class="box_top_right ">
                <p>Оплата</p>
        </div>
        <div class="visa_mc">
                <p>Оплата банковской картой</p>
                <div class="visa"></div>
                <div class="mc"></div>
        </div>

        <div id="gt_info">
                
        </div>

<%= form_tag(pay_online_url, remote: true, method: :post ) do %>
        <div class="delta_box">
                <p class="amount">Сумма за установку системы, руб: <%= @installation_payment %></p>
                <p class="amount">Сумма за ежемесячное обслуживание, руб: <%= @service_payment %></p>
                <p >Cумма к оплате, руб: <%= @amount %></p>
                <p>Комиссия составит: <%= @commission %> руб.</p>
                <%= hidden_field_tag "key", params[:key] %>
        </div>
        <div class="end">
                <%= submit_tag("Оплатить", :class=>:end_button)  %>
        </div>
<% end %>
</div>