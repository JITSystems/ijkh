<div class="top_plate">
	<p class="text_plate_gray">Сервис для учета расходов и оплаты услуг в сфере ЖКХ</p>
	<p class="text_plate_blue">Опрос</p>
	<p id="quiz_progress" >Вопрос <span id="quiz_quiestion_num">1</span> из 10</p>
</div>

<div class="container_boxes">
  <div class="horizontal_div" style="width: 100%; float: none;">
    <div class="box_blue" id="" style="min-height:245px;width:880px;padding: 25px; background-color: #e8eef2; font-size: 0.9em;">
	
    	
    	<% @quiz_q.each do |q_q| %>
	    	<div class="quiz_box" id="quiz_box_<%= q_q.id %>">	
	    		<%= form_for WebInterface::QuizResult.new, url: web_interface_quiz_results_path, remote: true, method: :post do |f|  %>
	    		    		<h1><%= q_q.body %></h1>

	    		    		<%= f.hidden_field :quiz_question_id, value: q_q.id %>
	    		
	    		    		<% q_q.quiz_answers.each_with_index do |q_a, index| %>
	    		    		
	    		    			<p>
	    		    				<%= f.radio_button :quiz_answer_id, q_a.id %>
	    		    				<%= f.label(:quiz_answer_id.to_s + '_' + q_a.id.to_s, q_a.body) %>
	    		    			</p>
	    		
	    					<% end %>
	    		
	    					<% if q_q.has_custom %>
	    						<p>
	    							<%= label q_q.id, "другой вариант:"  %>
	    			    			<%= f.text_field :custom_answer, onfocus: "$(\'input[name=\' + this.name + \']\').removeAttr(\'checked\')" %>
	    			    		</p>
	    		    		<% end %>
	    		    	<%= f.submit "Следующий вопрос", class: "end_button" %>
	    		<% end %>
	    	</div>
	    	<div class="quiz_box" id="quiz_box_11"><p>Конец</p></div>
    	<% end %>

    </div>
  </div>
</div>